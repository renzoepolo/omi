# Runtime
NODE_ENV=production
PORT=3000

# Seguridad
APP_SECRET=replace-with-64-char-random-string
JWT_SECRET=replace-with-64-char-random-string
ENCRYPTION_KEY=replace-with-32-byte-base64-key

# Base de datos (usar TLS y credenciales rotadas)
DATABASE_URL=postgresql://app_user:strong_password@db.example.com:5432/appdb?sslmode=require

# CORS (lista explícita, separada por comas)
CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# Rate limit app (si aplica también en backend)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120

# Observabilidad
LOG_LEVEL=info
LOG_FORMAT=json

# Health checks
HEALTHCHECK_PATH=/health
READINESS_PATH=/health/ready
